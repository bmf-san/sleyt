{
  "name": "sleyt",
  "version": "1.1.3",
  "description": "A minimal and modern CSS framework with glass morphism design and data visualization components",
  "main": "dist/css/index.css",
  "files": [
    "dist/css/*.css",
    "src/**/*.css",
    "LICENSE",
    "README.md",
    "README-ja.md"
  ],
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.6",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "scripts": {
    "test": "npm run lint:css && npm run lint:html",
    "build": "npm run build:css",
    "build:css": "postcss src/index.css --dir dist/css && postcss src/index.css --dir docs/public/css",
    "build:dev": "mkdir -p dist/css && postcss src/index.css --dir dist/css",
    "watch:css": "postcss src/index.css --dir dist/css --watch",
    "lint": "npm run lint:css && npm run lint:html",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:html": "prettier --check \"docs/public/**/*.html\"",
    "lint:html:fix": "prettier --write \"docs/public/**/*.html\"",
    "clean": "rm -rf dist/css/*",
    "prepublishOnly": "npm run clean && npm run build && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmf-san/sleyt.git"
  },
  "keywords": [
    "css",
    "framework",
    "minimal",
    "modern",
    "utility-first",
    "glass-morphism",
    "charts",
    "data-visualization",
    "transparency"
  ],
  "author": "bmf-san",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bmf-san/sleyt/issues"
  },
  "homepage": "https://github.com/bmf-san/sleyt#readme",
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ],
  "publishConfig": {
    "access": "public"
  }
}
